{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.vue", "*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2019", "DOM"],
    "composite": true,
    "outDir": "dist",
    "declarationDir": "types",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "verbatimModuleSyntax": true
  }
}
