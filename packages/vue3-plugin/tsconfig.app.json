{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["src/env.d.ts", "src/**/*", "src/**/*.vue", "*.d.ts"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"lib": ["ES2019"],
		"composite": true,
		"outDir": "dist",
		"declarationDir": "types",
		"allowJs": true,
		"baseUrl": ".",
		"rootDir": "src",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
